@model CNW_WebBanQuanAo.Models.LoginModel

@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="form" style="margin-top: 10px; margin-bottom:25px;">
    <!--form-->
    <div class="container">
        <div class="row">
            <div class="col-sm-2"></div>
            <div class="col-sm-5 col-sm-offset-1">
                <div class="login-form">
                    <!--login form-->
                    @using (Html.BeginForm())
                    {
                       
                        <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
                        @Html.AntiForgeryToken()


                        <h2 style=" margin-left: 14px;font-size:30px;">Đăng nhập</h2>
                        <div class="form-group">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        </div>

                        
                        <div class="form-group">
                            @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label col-md-5" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-5" })
                            <div class="col-md-10">
                                @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>

                      
                        <br>
                        <div class="form-group">
                            <div class="col-md-offset-20 col-md-10">
                                <button type="submit" class="btn btn-default">Đăng nhập</button>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-10">
                                <br />
                                <li>@Html.ActionLink("Bạn chưa có tài khoản? Đăng kí tài khoản tại đây", "Register", "Account")</li>
                            </div>

                        </div>
                    }
                </div><!--/login form-->
            </div>
        </div>
</section><!--/form-->
